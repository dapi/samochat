tr id=dom_id(project, :row)
  td
    span title=project.telegram_group_id
      = project.name
  td
    - if project.host.present?
      = link_to project.host, project.url, target: '_blank'
    - else
      i Не установлено
  td= project.username
  td= bot_connection_status project
  td= project.telegram_group_id
  td= link_to project.visitors.count, project_visitors_path(project)
  td= link_to project.visits.count, project_visits_path(project)
  td= link_to 'Код виджета', project_path(project)

